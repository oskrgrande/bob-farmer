{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "incremental": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
